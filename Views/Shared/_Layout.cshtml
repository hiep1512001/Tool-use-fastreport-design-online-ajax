<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FASTREPORT BV115</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">FASTREPORT BV115</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
@*                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="crudBasic" asp-action="Index">Tool</a>
                        </li>
                    </ul>
                </div> *@
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 mb-2" style="height:auto; background-color:#f5e6e1">
                <div class="container">
                    <div class="form-group mt-3">
                        <label class="font-weight-bold">Tên report</label>
                        <select class="form-select border-2" style="width:100%" data-mdb-filter="true" aria-label="Default select example" id="selectName" onchange="changeReport()">
                            <option selected>Chọn tên report</option>
                        </select>
                    </div>
                    <div class="form-group ">
                        <label class="font-weight-bold">ID report</label>
                        <input readonly type="text" class="form-control " id="idReport" style="width:100%" placeholder="ID report">
                    </div>
                    <div class="form-group ">
                        <label class="font-weight-bold">Mô tả</label>
                        <textarea  readonly style="height:100px; width:100%" id="Discription"></textarea>
                    </div>
                    <button class="btn btn-primary" onclick="loadReportFromDB()">Chọn report</button>
                    <button class="btn btn-primary" onclick="GetReportAjax()">Test</button>
                </div>
            </div>
            <div class="col-md-10">
                <div class="container">
                    <main role="main" class="align-content-center pb-3">
                        @RenderBody()
                    </main>
                </div>
                <!-- Here the result will be displayed-->
            </div>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div id="results"></div>
        </div>
    </footer>
	<script src="~/js/jquery.js"></script>
	<script src="~/js/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/dselect.js"></script>
    <script src="~/js/main.js" charset="UTF-8"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
